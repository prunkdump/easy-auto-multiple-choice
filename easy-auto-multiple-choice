my $testResultsFileName = "results.csv";

my %actionFiles = ( "gui"          => ["test"],
                    "set-students" => ["$amcPrivateDir/$inputCSVFileName"],
                    "edit-test"    => [],
                    "build-test"   => ["$amcPrivateDir/$baseTestTEXFileName",
                                       "$amcPrivateDir/$baseTestPDFFileName",
